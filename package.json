{
  "name": "tracwhisper",
  "version": "1.0.0",
  "description": "P2P end-to-end encrypted private notes on Trac Network, built on Intercom",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "pear run .",
    "peer1": "pear run . --store-path ./stores/peer1",
    "peer2": "pear run . --store-path ./stores/peer2 --port 7476"
  },
  "keywords": [
    "trac",
    "intercom",
    "p2p",
    "encrypted",
    "e2e",
    "hyperswarm",
    "private-messaging",
    "notes"
  ],
  "author": "linoxbt",
  "license": "MIT",
  "dependencies": {
    "b4a": "^1.6.7",
    "hypercore-crypto": "^3.4.2",
    "hyperswarm": "^4.7.15",
    "ws": "^8.18.0"
  },
  "pear": {
    "name": "tracwhisper",
    "type": "terminal"
  }
}
